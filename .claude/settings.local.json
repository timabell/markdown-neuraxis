{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cargo build)",
      "Bash(cargo test)",
      "Bash(cargo fmt:*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo check:*)",
      "Bash(cargo insta:*)",
      "WebFetch(domain:crates.io)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:github.com)"
    ],
    "deny": []
  },
  "hooks": {
    "pre-commit": "Use the code-reviewer agent to review all staged changes before committing."
  }
}
